<div class="spacing-grid">
  <div class="left">
    <h2> Day <%= @day.date.to_s %> </h2>
  </div>
  <div class="center">
    <%= link_to "view all", "/days?date=#{@day.date.iso8601}", method: :get, role: "button", class: "slim" %>
  </div>
  <div class="right">
    <%= link_to "⬅️", "/entries?date=#{(@day.date - 1.day).iso8601}", method: :get, role: "button", class: "slim" %>
    <%= link_to "➡️", "/entries?date=#{(@day.date + 1.day).iso8601}", method: :get, role: "button", class: "slim" %>
  </div>
</div>

<ul class="bottom-spacer">
  <% @entries.each do |entry| %>
    <li class="nude tight">
      <%= render "orgs/entries/editable_entry", entry: entry %>
    </li>
  <% end %>

  <li class="nude">
    <%= render "orgs/entries/new_entry", org: current_org, member: current_member, day: @day %>
  </li>
</ul>
